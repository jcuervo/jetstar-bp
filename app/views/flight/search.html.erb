<%= form_tag(flight_index_path, :method => :post) do %>
  <span id="searchFieldGroup">
    From 
    <%= text_field_tag params[:q], "Type name or city", :id => "search_#{params[:q]}", :class => "searchField" %>
    <span id="clearSearch">X</span>
  </span>
  <%= submit_tag "Set #{(params[:q] == "from")? "Origin" : "Destination" }" %>
<%- end -%>
<ul id="search_#{params[:q]}_list"></ul>

