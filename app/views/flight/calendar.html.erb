<%- content_for :header do -%>
  <div id="findFlights">
    <div id="calendar"><a href="/flight" class="cancelBtn">Back</a></div>
    <div id="midHeader"><h2>Schedules</h2></div>
    <div id="crumb"><a href="/flight" class="doneBtn">Done</a></div>
  </div>
<%- end -%>


<div id="drWrap">
  <ul id="dr" class="reset">
    <li>
      <div class="tapable schedtaps left" id="dd">
        <h4>Depart</h4>
        <div class="left fullwidth">
          <div id="departDetails" class="hidden"></div>
          <%- if session[:depart] 
              d = Date.new(session[:depart].split("/")[2].to_i, session[:depart].split("/")[0].to_i, session[:depart].split("/")[1].to_i) -%>
            <div id="dpDate" class="halfi left"><%= d.strftime("%A")%><br /><%= d.strftime("%b")%></div>
            <div id="dpDay" class="halfi left"><%= d.strftime("%d")%></div>
            <div id="dpSource"><%= d.strftime("%m/%d/%Y") %></div>
          <%- else %>
            <div id="dpDate" class="halfi left"><%= Date.today.strftime("%A")%><br/><%= Date.today.strftime("%b")%></div>
            <div id="dpDay" class="halfi left"><%= Date.today.strftime("%d")%></div>
            <div id="dpSource"><%= Date.today.strftime("%m/%d/%Y") %></div>
          <%- end %>
        </div>
      </div>
    </li>
    <li>
      <div class="schedtaps left" id="rd">
        <h4>Return</h4>
        <div class="left fullwidth">
          <div id="returnDetails" class="hidden"></div>
          <%- if session[:return] 
              d = Date.new(session[:return].split("/")[2].to_i, session[:return].split("/")[0].to_i, session[:return].split("/")[1].to_i) -%>
            <div id="rpDate" class="halfi left"><%= d.strftime("%A")%><br /><%= d.strftime("%b")%></div>
            <div id="rpDay" class="halfi left"><%= d.strftime("%d")%></div>
            <div id="rpSource"><%= d.strftime("%m/%d/%Y") %></div>
          <%- else %>
            <div id="rpDate" class="halfi left"><%= Date.today.strftime("%A")%><br/><%= Date.today.strftime("%b")%></div>
            <div id="rpDay" class="halfi left"><%= Date.today.strftime("%d")%></div>
            <div id="rpSource"><%= Date.today.strftime("%m/%d/%Y") %></div>
          <%- end %>
        </div>
      </div>
    </li>
  </ul>
</div>
<div id="dps" class="left fullwidth">
  <div id="datepickerD">
  </div>
  <div id="datepickerR" class="hidden">
  </div>
</div>



